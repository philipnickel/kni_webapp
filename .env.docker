# Docker environment for local testing with baseline data

# Django Core Settings
DJANGO_SECRET_KEY=docker-local-secret-key-not-for-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CSRF_TRUSTED_ORIGINS=http://localhost:8001

# Database Configuration
DATABASE_NAME=kni_webapp_docker
DATABASE_USER=kni_user
DATABASE_PASSWORD=docker_db_password

# Redis Configuration
REDIS_PASSWORD=docker_redis_password

# Application Configuration
WAGTAILADMIN_BASE_URL=http://localhost:8001
SECURE_SSL_REDIRECT=False

# Load baseline data from your development environment
LOAD_BASELINE=true

# Disable tenant seeding (we have real data from baseline)
SEED_TENANT_DATA=false

# Optional admin user for first boot (if not in baseline)
DJANGO_SUPERUSER_EMAIL=admin@local.test
DJANGO_SUPERUSER_PASSWORD=admin123