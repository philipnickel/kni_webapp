# Local production-like environment for Docker Compose

# Django Core Settings
DJANGO_SECRET_KEY=localprod-secret-key-not-for-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CSRF_TRUSTED_ORIGINS=http://localhost:8001

# Database Configuration
DATABASE_NAME=kni_webapp_localprod
DATABASE_USER=kni_user
DATABASE_PASSWORD=localprod_db_password

# Optional: Use host Postgres for prod-like stack (mimic 'make run' DB)
# Uncomment and set to your dev DB URL to have the container connect to your host DB.
# Example (macOS Docker): host.docker.internal resolves to host machine.
# HOSTDB_URL=postgresql://devuser:devpass@host.docker.internal:5432/kni_webapp_dev

# Redis Configuration
REDIS_PASSWORD=localprod_redis_password

# Application Configuration
WAGTAILADMIN_BASE_URL=http://localhost:8001
SECURE_SSL_REDIRECT=False

# Tenant seeding (off by default)
SEED_TENANT_DATA=false
TENANT_SCHEMA=
TENANT_HOSTNAME=
TENANT_PORT=8001
TENANT_ADMIN_USER=admin
TENANT_ADMIN_PASSWORD=admin123
TENANT_ADMIN_EMAIL=admin@local.test

# Optional admin user for first boot
DJANGO_SUPERUSER_EMAIL=admin@local.test
DJANGO_SUPERUSER_PASSWORD=admin123
