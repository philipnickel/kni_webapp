# KNI Webapp Environment Configuration
# Copy this to .env and fill in your actual values

# ==============================================================================
# Django Core Settings
# ==============================================================================
DJANGO_SECRET_KEY=your-super-secret-key-here-make-it-long-and-random-50-chars
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost

# ==============================================================================
# Database Configuration (PostgreSQL)
# ==============================================================================
DATABASE_NAME=kni_webapp
DATABASE_USER=kni_user
DATABASE_PASSWORD=your_secure_database_password_here
DATABASE_PORT=5432
DATABASE_AUTH_METHOD=md5

# Alternative: Full DATABASE_URL (overrides individual settings)
# DATABASE_URL=postgresql://kni_user:password@localhost:5432/kni_webapp

# ==============================================================================
# Redis Configuration (Caching & Sessions)
# ==============================================================================
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379

# Alternative: Full REDIS_URL
# REDIS_URL=redis://:password@localhost:6379/0

# ==============================================================================
# Application Configuration
# ==============================================================================
# Base URL for Wagtail admin (used for preview URLs, etc.)
WAGTAILADMIN_BASE_URL=https://your-domain.com

# Port mappings for Docker Compose
WEB_PORT=8000
NGINX_PORT=80
NGINX_SSL_PORT=443

# ==============================================================================
# Security Settings
# ==============================================================================
SECURE_SSL_REDIRECT=True

# ==============================================================================
# Tenant Configuration (Multi-tenant setup)
# ==============================================================================
# Set to 'true' to seed initial tenant data on first deployment
SEED_TENANT_DATA=false

# Tenant details (for seeding)
TENANT_SCHEMA=your_client_schema
TENANT_HOSTNAME=your-client-domain.com
TENANT_PORT=80
TENANT_ADMIN_USER=admin
TENANT_ADMIN_PASSWORD=change_this_password
TENANT_ADMIN_EMAIL=admin@your-client-domain.com

# ==============================================================================
# Development/Admin User (Optional - for development)
# ==============================================================================
# Set these to auto-create a superuser on first deployment
DJANGO_SUPERUSER_EMAIL=admin@your-domain.com
DJANGO_SUPERUSER_PASSWORD=your_admin_password

# ==============================================================================
# External Services (Optional)
# ==============================================================================
# Email settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@your-domain.com
EMAIL_HOST_PASSWORD=your_email_password

# AWS S3 for media files (optional)
USE_S3=False
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket
AWS_S3_REGION_NAME=eu-west-1

# ==============================================================================
# Celery Configuration (Background Tasks)
# ==============================================================================
CELERY_BROKER_URL=redis://:your_redis_password@redis:6379/1
CELERY_RESULT_BACKEND=redis://:your_redis_password@redis:6379/2

# ==============================================================================
# Monitoring & Logging (Optional)
# ==============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==============================================================================
# Example Environment Configurations
# ==============================================================================

# PRODUCTION EXAMPLE:
# DJANGO_SECRET_KEY=dj-insecure-$(openssl rand -base64 32)
# DEBUG=False
# ALLOWED_HOSTS=jcleemannbyg.dk,www.jcleemannbyg.dk
# DATABASE_PASSWORD=$(openssl rand -base64 32)
# REDIS_PASSWORD=$(openssl rand -base64 16)
# WAGTAILADMIN_BASE_URL=https://jcleemannbyg.dk
# SECURE_SSL_REDIRECT=True

# DEVELOPMENT EXAMPLE:
# DJANGO_SECRET_KEY=dev-secret-key-not-for-production
# DEBUG=True
# ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
# DATABASE_PASSWORD=dev_password
# REDIS_PASSWORD=dev_redis
# WAGTAILADMIN_BASE_URL=http://localhost:8000
# SECURE_SSL_REDIRECT=False