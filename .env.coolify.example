# Coolify Environment Variables Example
# Copy to .env for zero-configuration deployment

# Database Configuration (Coolify will likely provide these)
DATABASE_NAME=kni_webapp
DATABASE_USER=kni_user
DATABASE_PASSWORD=your_secure_password

# Django Configuration
DJANGO_SECRET_KEY=your-super-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Coolify-specific
SERVICE_FQDN_WEB=your-domain.com

# SSL and Security
SECURE_SSL_REDIRECT=True
WAGTAILADMIN_BASE_URL=https://your-domain.com

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Performance Tuning
GUNICORN_WORKERS=2
MEMORY_LIMIT=1G
CPU_LIMIT=1.0

# Baseline Data Loading
LOAD_BASELINE=true

# Health Check
HEALTH_CHECK_PATH=/health/ready/

# Don't expose ports in production (Coolify handles this)
# WEB_EXPOSE_PORT=
# DATABASE_EXPOSE_PORT=
# REDIS_EXPOSE_PORT=

# Conditional volumes (empty for Coolify to avoid mounting host paths)
MOUNT_BACKUPS=/dev/null
MOUNT_BASELINE=/dev/null