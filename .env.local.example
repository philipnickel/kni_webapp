# Local Development Environment Variables Example
# Copy to .env for local development

# Database Configuration
DATABASE_NAME=kni_webapp
DATABASE_USER=kni_user
DATABASE_PASSWORD=kni_secure_password

# Django Configuration
DJANGO_SECRET_KEY=insecure-dev-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CSRF_TRUSTED_ORIGINS=http://localhost:8003,http://127.0.0.1:8003

# Local Development Ports
WEB_EXPOSE_PORT=8003
DATABASE_EXPOSE_PORT=5432
REDIS_EXPOSE_PORT=6379

# SSL and Security (disabled for local)
SECURE_SSL_REDIRECT=False
WAGTAILADMIN_BASE_URL=http://localhost:8003

# Superuser for local development
DJANGO_SUPERUSER_EMAIL=admin@localhost
DJANGO_SUPERUSER_PASSWORD=admin123

# Baseline Data (usually false for development)
LOAD_BASELINE=false

# Health Check
HEALTH_CHECK_PATH=/health/

# Resource limits (not needed for local)
# MEMORY_LIMIT=
# CPU_LIMIT=

# Mount local directories
MOUNT_BACKUPS=./backups
# Django-native baselines are stored in ./backups/ - no separate mount needed