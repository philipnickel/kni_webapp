# Production Environment Variables for KNI Webapp
# Copy this file to .env and set your production values

# ===== SECURITY =====
DJANGO_SECRET_KEY=your-super-secret-key-here-minimum-50-characters-long
DEBUG=False

# ===== DOMAIN CONFIGURATION =====
PRIMARY_DOMAIN=your-domain.com
EXTRA_DOMAINS=www.your-domain.com,subdomain.your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com
WAGTAILADMIN_BASE_URL=https://your-domain.com
SECURE_SSL_REDIRECT=True

# ===== DATABASE =====
DATABASE_NAME=kni_webapp_prod
DATABASE_USER=kni_user_prod
DATABASE_PASSWORD=your-secure-database-password-here
DATABASE_AUTH_METHOD=md5
DATABASE_URL=postgresql://kni_user_prod:your-secure-database-password-here@db:5432/kni_webapp_prod

# ===== REDIS CACHE =====
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://:your-secure-redis-password-here@redis:6379/0

# ===== EMAIL CONFIGURATION =====
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# ===== PERFORMANCE SETTINGS =====
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
GUNICORN_MAX_REQUESTS=2000
GUNICORN_MAX_REQUESTS_JITTER=200

# ===== TENANT CONFIGURATION (if needed) =====
SEED_TENANT_DATA=false
TENANT_SCHEMA=public
TENANT_HOSTNAME=your-domain.com
TENANT_PORT=443
TENANT_ADMIN_USER=admin
TENANT_ADMIN_PASSWORD=secure-admin-password-here
TENANT_ADMIN_EMAIL=admin@your-domain.com

# ===== COOLIFY SPECIFIC =====
# These are typically set by Coolify automatically
SERVICE_FQDN_WEB=https://your-domain.com
COOLIFY_FQDN=your-domain.com
LOAD_BASELINE=true

# ===== OPTIONAL FEATURES =====
# Uncomment and set these if you need additional features
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-s3-bucket
# AWS_S3_REGION_NAME=us-east-1
# USE_S3_STORAGE=False